doctype html
html(lang='en')
  head
    title Registration
    link(rel='stylesheet', href='styles/base.css')
    link(rel='stylesheet', href='styles/style.css')
  body
    header.site-header
      h1.site-header__logo News
    .site-content
      h1.page-title Registration
      .registration-form
        form#registration(action='/users/create', method='post')
          .input-wrapper
            input#username.input(type='text', name='username', required='', placeholder='Your username')
          .input-wrapper
            input#password.input(type='password', name='password', required='', placeholder='Password')
          input.button(type='submit', value='Create')